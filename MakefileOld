SRC=SRC/main.c
LIB=list.c graph.c array.c neighbour.c
INCLUDE=list.h graph.h array.h neighbour.h
EXEC=main
OBJ=$(LIB:.c=.o)
CC=gcc -g
CFLAGS=-Wall
LDFLAGS=-lm -ILIB

$(EXEC) : $(SRC) $(OBJ)
	$(CC) -o $(EXEC) $^ $(CFLAGS) $(LDFLAGS) 

%.o : %.c %.h
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean veryclean
clean :
	rm *.o

veryclean : clean
	rm $(EXEC)
